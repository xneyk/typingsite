---
interface Props {
   word: string;
}
const { word } = Astro.props;
---
<!-- Works, but now not used (I don't know how to integrate it xd) -->
<word>
   {
      word.split('')
      .map((letter) => <letter>{letter}</letter>)
   }
</word>
<style>
   word {
      display: flex;
      font-size: 24px;
      font-weight: bold;
      margin: 2px 10px 2px 10px;
      color: var(--font-unwritten);
   }
</style>